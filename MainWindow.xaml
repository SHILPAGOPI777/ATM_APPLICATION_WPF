<Window x:Class="ATM_Application_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ATM Application" Height="350" Width="525">
    <Grid Background="LightBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome To ATM Application" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold"/>
            <Button Name="CreateAccountButton" Content="Create Account" Click="CreateAccountButton_Click" Margin="10" FontWeight="Bold"/>
            <Button Name="SelectAccountButton" Content="Select Account" Click="SelectAccountButton_Click" Margin="10" FontWeight="Bold"/>
            <Button Name="ExitButton" Content="Exit" Click="ExitButton_Click" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" Padding="10,2" Foreground="red"/>
        </StackPanel>
    </Grid>
</Window>
