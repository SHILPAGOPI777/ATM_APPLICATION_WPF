<Window x:Class="ATM_Application_WPF.WithdrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Withdraw" Height="200" Width="300">
    <Grid Background="LightBlue">
        <StackPanel Margin="10">
            <TextBlock Text="Enter amount to withdraw:"/>
            <TextBox Name="AmountTextBox"/>
            <Button Name="WithdrawButton" Content="Withdraw" Click="WithdrawButton_Click" Margin="10"/>
            <TextBlock Name="WithdrawMessage" Foreground="Green" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
