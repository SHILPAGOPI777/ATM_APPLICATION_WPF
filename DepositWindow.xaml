<Window x:Class="ATM_Application_WPF.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deposit" Height="200" Width="300">
    <Grid Background="LightBlue">
        <StackPanel Margin="10">
            <TextBlock Text="Enter amount to deposit:" FontWeight="Bold"/>
            <TextBox Name="AmountTextBox"/>
            <Button Name="DepositButton" Content="Deposit" Click="DepositButton_Click" Margin="10" FontWeight="Bold"/>
            <TextBlock Name="DepositMessage" Foreground="Green" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
