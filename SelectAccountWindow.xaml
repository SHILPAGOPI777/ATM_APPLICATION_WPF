<Window x:Class="ATM_Application_WPF.SelectAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Account" Height="300" Width="300">
    <Grid Background="LightBlue">
        <StackPanel Margin="10">
            <TextBlock Text="Enter Account Number:"/>
            <TextBox Name="AccountNumberTextBox"/>
            <Button Name="SelectAccountButton" Content="Select Account" Click="SelectAccountButton_Click" Margin="10"/>
            <TextBlock Name="SelectAccountMessage" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
